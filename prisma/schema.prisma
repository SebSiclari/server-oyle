generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Club {
  id          Int      @id
  name        String
  description String
  address     String
  region      String
  country     String
  eventsSoFar Int
  capacity    Int
  recommended Boolean
  closed      Boolean
  live        Boolean
  artists     Json[]
  placeId     String
  lat         Float
  lng         Float
  status      String
  hours       Json
  price       Int
  rating      Float
  ratings     Int
  vicinity    String
  website     String
  logo        String
  image       String
  types       String[]
  Event       Event[]
}

model Event {
  id          Int      @id
  name        String
  description String
  age         Int
  cost        String
  date        String
  startTime   String
  endTime     String
  attending   Int
  lineup      String
  ticketed    Boolean
  festival    Boolean
  images      String[]
  club        Club?    @relation(fields: [clubId], references: [id])
  clubId      Int?
}

model User {
  uid       String     @id
  DDMSwitch DDMSwitch?
}

model DDMSwitch {
  id       Int    @id @default(autoincrement())
  starts   String
  ends     String
  phone    String
  interval Int
  password String
  message  String
  user     User   @relation(fields: [userUid], references: [uid])
  userUid  String @unique
}
